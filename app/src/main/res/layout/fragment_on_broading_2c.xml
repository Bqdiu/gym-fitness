<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OnBroading_2c"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/lightblue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAppleOnBroad_2c"
            android:layout_width="41dp"
            android:layout_height="43dp"
            android:layout_gravity="left"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center"

            android:src="@drawable/nutrition" />


        <TextView
            android:id="@+id/tvContenOnBroad_2c"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/lightblue"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="30sp"
            android:padding="10dp"
            android:text="Find Nutrition Tips That Fit Your Lifestyle"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>