<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.gymfitness.viewmodels.AuthViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToOutline="true"
        android:paddingTop="12dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/button5"
                    android:layout_width="103.36dp"
                    android:layout_height="28dp"
                    android:background="@drawable/faq_type_selected"
                    android:fontFamily="@font/league_spartan"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="General"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:backgroundTint="@null" />

                <TextView
                    android:id="@+id/button6"
                    android:layout_width="103.36dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/faq_type_no_selected"
                    android:fontFamily="@font/league_spartan"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Account"
                    android:textColor="@color/lightpurple"
                    android:textSize="15sp"
                    app:backgroundTint="@null" />

                <TextView
                    android:id="@+id/button7"
                    android:layout_width="103.36dp"
                    android:layout_height="28dp"
                    android:background="@drawable/faq_type_no_selected"
                    android:fontFamily="@font/league_spartan"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Services"
                    android:textColor="@color/lightpurple"
                    android:textSize="15sp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="41.86dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/faq_search_background"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/league_spartan"
                android:gravity="center_vertical"
                android:inputType="text"
                android:lineHeight="18dp"
                android:paddingStart="19dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:text="Search"
                android:textColor="#676767"
                android:textSize="19.32sp"
                app:backgroundTint="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reV_FAQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_marginTop="32dp"/>
        </LinearLayout>

    </RelativeLayout>


</layout>
