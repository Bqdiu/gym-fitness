<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.gymfitness.viewmodels.OnBoardViewmodel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/onboarding_bg1">

        <LinearLayout
            android:id="@+id/skipbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="315dp"
            android:layout_marginTop="65dp">

            <TextView
                android:id="@+id/skip"
                android:layout_width="33dp"
                android:layout_height="17dp"
                android:fontFamily="@font/league_spartan"
                android:gravity="center_vertical"
                android:text="@string/skip"
                android:textColor="@color/limegreen" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="6dp"
                android:layout_height="11dp"
                app:srcCompat="@drawable/arrow"
                android:scaleX="-1"
                android:scaleY="-1"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginTop="261dp"
            android:background="@color/lightpurple"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                setAdapter="@{viewModel.adapter}"
                android:layout_marginTop="16dp">
            </androidx.viewpager2.widget.ViewPager2>

<!--            <com.zhpan.indicator.IndicatorView-->
<!--                android:id="@+id/indicator_view"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="4dp"-->
<!--                app:vpi_style="dash"-->
<!--                app:vpi_slide_mode="smooth"-->
<!--                android:layout_marginTop="9dp"-->
<!--                app:vpi_slider_checked_color="@color/white"-->
<!--                app:vpi_slider_normal_color="@color/purple"-->

<!--                setIndicator="@{viewPager}"/>-->
        </LinearLayout>

    </LinearLayout>

</layout>