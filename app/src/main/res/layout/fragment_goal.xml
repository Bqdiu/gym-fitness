<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.setup.GoalFragment">

    <!--Main title-->
    <TextView
        android:id="@+id/fg_tv_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_is_your_goal"
        android:gravity="center"
        android:textAppearance="@style/fg_tv_main_title"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Sub title-->
    <TextView
        android:id="@+id/subtile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_n_sed_do_eiusmod_tempor_incididunt_ut_labore_et_dolore_n_magna_aliqua"
        android:textAppearance="@style/fg_tv_sub_title"
        app:layout_constraintTop_toBottomOf="@+id/fg_tv_main_title"
        android:layout_marginTop="25dp"
        />

    <!--Body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3A0FF"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/subtile"
        android:layout_marginTop="35dp"
        >

        <RadioGroup
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:id="@+id/fg_rbg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="323dp"
                android:layout_height="54dp"
                android:layout_margin="11dp"
                android:background="@drawable/fg_custom_radio_selector"
                android:button="@drawable/transparent_bg_bordered"
                android:drawableEnd="@drawable/fg_button_icon_selector"
                android:textColor="@drawable/fg_custom_radio_text_selector"
                android:textAppearance="@style/fg_tv_body"
                android:text="@string/lose_weight"
                />
            <RadioButton
                android:layout_width="323dp"
                android:layout_height="54dp"
                android:layout_margin="11dp"
                android:background="@drawable/fg_custom_radio_selector"
                android:button="@drawable/transparent_bg_bordered"
                android:drawableEnd="@drawable/fg_button_icon_selector"
                android:textColor="@drawable/fg_custom_radio_text_selector"
                android:textAppearance="@style/fg_tv_body"
                android:text="@string/gain_weight"
                />
            <RadioButton
                android:layout_width="323dp"
                android:layout_height="54dp"
                android:layout_margin="11dp"
                android:background="@drawable/fg_custom_radio_selector"
                android:button="@drawable/transparent_bg_bordered"
                android:drawableEnd="@drawable/fg_button_icon_selector"
                android:textColor="@drawable/fg_custom_radio_text_selector"
                android:textAppearance="@style/fg_tv_body"
                android:text="@string/muscle_mass_gain"
                />
            <RadioButton
                android:layout_width="323dp"
                android:layout_height="54dp"
                android:layout_margin="11dp"
                android:background="@drawable/fg_custom_radio_selector"
                android:button="@drawable/transparent_bg_bordered"
                android:drawableEnd="@drawable/fg_button_icon_selector"
                android:textColor="@drawable/fg_custom_radio_text_selector"
                android:textAppearance="@style/fg_tv_body"
                android:text="@string/shape_body"
                />
            <RadioButton
                android:layout_width="323dp"
                android:layout_height="54dp"
                android:layout_margin="11dp"
                android:background="@drawable/fg_custom_radio_selector"
                android:button="@drawable/transparent_bg_bordered"
                android:drawableEnd="@drawable/fg_button_icon_selector"
                android:textColor="@drawable/fg_custom_radio_text_selector"
                android:textAppearance="@style/fg_tv_body"
                android:text="@string/others"
                />


        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>