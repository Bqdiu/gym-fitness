<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.gymfitness.viewmodels.ArticleDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToOutline="true"
        android:paddingTop="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingTop="39dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="35dp">

                <TextView
                    android:id="@+id/txtArticleName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Strength Training Tips"
                    android:textColor="@color/limegreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgFavStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bot_star_favorite_start_small_on" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="35dp">

                <ImageView
                    android:id="@+id/imgPurpleClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/purple_clock" />

                <TextView
                    android:id="@+id/txtPublishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/league_spartan"
                    android:text="Published on September 15"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/purple"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:layout_marginTop="22dp"
                android:background="@color/lightpurple"
                android:paddingHorizontal="35dp"
                android:paddingVertical="22dp">

                <ImageView
                    android:id="@+id/imgArticle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/article_detail_img_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/woman_help_home" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtArticleSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:ellipsize="none"
                android:fontFamily="@font/league_spartan"
                android:lineHeight="14sp"
                android:paddingHorizontal="35dp"
                android:singleLine="false"
                android:text="Discover essential Strength Training Tips to maximize your workouts and achieve your fitness goals efficiently. Learn how to optimize your routine, prevent injuries, and unlock your full potential in the gym."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/lvArticleDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25sp"
                android:paddingHorizontal="35dp" />

        </LinearLayout>


    </RelativeLayout>


</layout>
