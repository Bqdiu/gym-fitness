<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.gymfitness.viewmodels.AuthViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToOutline="true"
        android:paddingTop="12dp">


        <LinearLayout
            android:layout_width="321.11sp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    app:tabIndicatorColor="@color/white"
                    app:backgroundTint="@null"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/lightpurple"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabRippleColor="@null"/>


            </LinearLayout>

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="41.86dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/faq_search_background"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/league_spartan"
                android:gravity="center_vertical"
                android:inputType="text"
                android:lineHeight="18dp"
                android:paddingStart="19dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:hint="Search"
                android:textSize="19.32sp"
                app:backgroundTint="@color/white" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


</layout>
