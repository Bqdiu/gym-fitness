<?xml version="1.0" encoding="utf-8"?>
 <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.gymfitness.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_forgottenPasswordFragment"
            app:destination="@id/forgottenPasswordFragment" />
        <action
            android:id="@+id/action_homeFragment_to_workoutFragment"
            app:destination="@id/workoutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_workoutSearch_6_3_2_A"
            app:destination="@id/workoutSearch_6_3_2_A" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.gymfitness.fragments.floatingMenu.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"
        >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_ownRoutineFragment"
            app:destination="@id/ownRoutineFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgottenPasswordFragment"
        android:name="com.example.gymfitness.fragments.authentication.ForgottenPasswordFragment"
        android:label="ForgottenPasswordFragment"
        tools:layout="@layout/fragment_forgotten_password"
        />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.gymfitness.fragments.floatingMenu.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites"
        />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.gymfitness.fragments.help.HelpFragment"
        android:label="HelpFragment"
        tools:layout="@layout/fragment_help"
        />
    <fragment
        android:id="@+id/workoutFragment"
        android:name="com.example.gymfitness.fragments.WorkoutFragment"
        android:label="WorkoutFragment"
        tools:layout="@layout/fragment_workout"
        >
        <action
            android:id="@+id/action_workoutFragment_to_exerciseRoutineFragment"
            app:destination="@id/exerciseRoutineFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.gymfitness.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"
        >
        <action
            android:id="@+id/action_settingsFragment_to_notificationFrag"
            app:destination="@id/notificationFrag" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.gymfitness.fragments.floatingMenu.EditProfileFragment"
        android:label="EditProfileFragment"
        tools:layout="@layout/fragment_editprofile"
        />
    <fragment
        android:id="@+id/notificationFrag"
        android:name="com.example.gymfitness.fragments.NotificationsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_notifications"
        >
        <action
            android:id="@+id/action_notificationFrag_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutSearch_6_3_2_A"
        android:name="com.example.gymfitness.fragments.WorkoutSearch_6_3_2_A"
        android:label="fragment_workout_search_6_3_2__a"
        tools:layout="@layout/fragment_workout_search_6_3_2__a" />
    <fragment
        android:id="@+id/ownRoutineFragment"
        android:name="com.example.gymfitness.fragments.routine.OwnRoutineFragment"
        android:label="OwnRoutineFragment"
        tools:layout="@layout/fragment_own_routine"
        />
    <fragment
        android:id="@+id/exerciseRoutineFragment"
        android:name="com.example.gymfitness.fragments.ExerciseRoutineFragment"
        android:label="ExerciseRoutineFragment"
        tools:layout="@layout/fragment_exercise_routine"
        >
        <action
            android:id="@+id/action_exerciseRoutineFragment_to_exerciseDetail"
            app:destination="@id/exerciseDetail" />
    </fragment>
    <fragment
        android:id="@+id/exerciseDetail"
        android:name="com.example.gymfitness.fragments.ExerciseDetailFragment"
        tools:layout="@layout/fragment_exercise_detail"
        />
</navigation>