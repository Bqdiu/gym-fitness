<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_recomand"
            android:layout_width="157dp"
            android:layout_height="92dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bgr_onboarding_2d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_varient2"
            app:layout_constraintEnd_toEndOf="@id/img_recomand"
            app:layout_constraintTop_toTopOf="@id/img_recomand" />


        <LinearLayout
            android:id="@+id/linear_recommand_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/img_recomand"
            app:layout_constraintStart_toStartOf="@id/img_recomand"
            app:layout_constraintTop_toBottomOf="@id/img_recomand">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/poppins"
                android:text="Squat Exercise"
                android:textColor="@color/third"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_time_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="12 Minutes"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="9dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_calories_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="120 Kcal"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_playvideo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_play_video"
            app:layout_constraintBottom_toTopOf="@id/linear_recommand_name"
            app:layout_constraintRight_toRightOf="parent"


            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
