<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="exercise"
            type="com.example.gymfitness.data.Exercise" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_round"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/ic_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round"/>

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ic_round"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="13dp"
                android:gravity="center"
                android:text="@string/dumbbell_rows"
                android:fontFamily="@font/poppins"
                android:textColor="#232323"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_time"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/_00_30"
                    android:textColor="#B3A0FF"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRepetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:textSize="13sp"
            android:textColor="#896CFE"
            android:fontFamily="@font/poppins"
            android:text="@string/repetition_3x" />

    </RelativeLayout>
</layout>