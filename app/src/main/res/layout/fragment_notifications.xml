<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".fragments.NotificationsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/generalNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/generalNotification"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/img_generalNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sound"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/img_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dontDisturbMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dontDisturbMode"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imf_dontDisturbMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vibrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vibrate"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/img_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lockScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lockScreen"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/img_lockScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reminders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reminders"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/img_reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/component31_on"
            android:layout_gravity="right|center" />

    </LinearLayout>
</LinearLayout>