<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.example.gymfitness.viewmodels.ProgressTracking" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToOutline="true"
        android:paddingTop="30dp">
        <RelativeLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:background="@null"
                android:contentDescription="@string/back_to_before"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow" />


            <TextView
                android:id="@+id/tvNameOfFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnBack"
                android:text="@string/progress_tracking"
                android:textColor="#896CFE"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@null"
                android:layout_toStartOf="@id/imageButton3"
                android:layout_centerVertical="true"
                android:contentDescription="@string/icon_search"
                android:scaleType="fitCenter"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_search" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@null"
                android:layout_toStartOf="@id/imageButton4"
                android:layout_centerVertical="true"
                android:contentDescription="@string/icon_notify"
                android:scaleType="fitCenter"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_notify" />
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/icon_user"
                android:scaleType="fitCenter"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_user" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionBar"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWorkout"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_round"
                android:layout_marginEnd="21dp"
                android:text="Workout" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChart"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_mau_vang"
                android:layout_weight="1"
                android:text="Charts" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:textColor="#E2F163"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins"
            android:text="My Progress" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView33"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:textColor="#E2F163"
            android:textSize="24sp"
            android:fontFamily="@font/poppins"
            android:text="January 12th" />

<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@id/textView34"-->
<!--            android:padding="23dp"-->
<!--            android:layout_marginTop="19dp"-->
<!--            android:background="@drawable/bg_chart"-->
<!--            android:layout_marginHorizontal="25dp">-->

<!--            <TextView-->
<!--                android:id="@+id/textView35"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#E2F163"-->
<!--                android:textSize="17sp"-->
<!--                android:text="Steps" />-->

<!--            -->
<!--        </RelativeLayout>-->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="282dp"
            android:background="@drawable/bg_chart"
            android:layout_height="285dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/textView34"
            android:layout_marginTop="19dp" />

    </RelativeLayout>

</layout>
