<!-- res/drawable/day_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Bo tròn các góc -->
            <solid android:color="@android:color/holo_green_light" />

        </shape>
    </item>

    <!-- Khi không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Nền trong suốt khi không chọn -->
        </shape>
    </item>
</selector>
